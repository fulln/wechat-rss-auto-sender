# 微信相关配置
WECHAT_CONTACT_NAME=文件传输助手

# RSS配置
RSS_FEED_URL=https://36kr.com/feed
CHECK_INTERVAL_MINUTES=30    # RSS检查间隔（分钟）- 多久检查一次RSS源
FETCH_ARTICLES_HOURS=6       # 文章获取范围（小时）- 每次获取最近几小时的文章

# 代理配置（可选）
# 统一代理地址，支持http和https
PROXY_URL=http://localhost:7897
# 或者分别设置http和https代理
# HTTP_PROXY=http://localhost:7897
# HTTPS_PROXY=http://localhost:7897

# AI总结配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
SUMMARY_MIN_LENGTH=100
SUMMARY_MAX_LENGTH=200

# 发送控制配置
MAX_ARTICLES_PER_BATCH=3
SEND_INTERVAL_MINUTES=1

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log